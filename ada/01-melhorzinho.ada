with Ada.Text_IO;
use Ada.Text_IO;

procedure UglyForm is
    begin Put ("Good form ");
             Put ("can aid in ");
             Put ("understanding a program,");
             New_Line;
             Put ("and bad form ");
             Put ("can make a program ");
             Put("unreadable.");
             New_Line;
    end UglyForm;


-- Result of execution

-- Good form can aid in understanding a program,
-- and bad form can make a program unreadable.

